<div class="app-card-container">
  <div class="card">
    <h1>About</h1>
    
    <hr>
    
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.JPG", width: 250, alt: "Profile Image", class: 'profile-img' %>
        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div 
                class="progress-bar bg-info"
                role="progressbar"
                aria-valuenow="<%= skill.percent_utilized %>"
                aria-valuemax="100"
                style="width: <%= skill.percent_utilized %>%"
                >
                  
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="col-md-8">
        <p>Find me in app/views/pages/about.html.erb</p>
        
        <p>
          <button
            class="btn btn-outline-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
            </button>
            
            <button
            class="btn btn-outline-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Education
            </button>
            
            <button
            class="btn btn-outline-primary"
            type="button"
            data-toggle="collapse"
            data-target="#music"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Music
            </button>
            
        </p>
        
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              job 1
            </div>
            <div class="card card-block">
              job 2
            </div>
            <div class="card card-block">
              job 3
            </div>
            <div class="card card-block">
              job 4
            </div>
          </div>
          
          <div class="collapse" id="education">
            <div class="card card-block">
              education 1
            </div>
            <div class="card card-block">
              education 2
            </div>
            <div class="card card-block">
              education 3
            </div>
            <div class="card card-block">
              education 4
            </div>
          </div>
          
          <div class="collapse" id="music">
            <div class="card card-block">
              <iframe src="https://open.spotify.com/embed/user/williamsna1/playlist/02lKstTyZ4cje9ptZxRvL9" width="100%" height="380" frameborder="0" allowtransparency="true"></iframe>
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>

